<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zll.dms.dao.ModuleDao">
  <resultMap id="Module" type="com.zll.dms.model.Module">
    <id column="id" property="id" />
    <result column="name" property="name" />
    <result column="parent_id" property="parentId" />
    <result column="type" property="type" />
    <result column="icon" property="icon" />   
    <result column="url" property="url" />  
    <result column="number" property="index" />      
    <!-- 
    <association property="parent"  column="parent_id" select="com.zll.dms.dao.ModuleDao.get" />
     -->
    <collection property="children" column="{parentId=id}" select="com.zll.dms.dao.ModuleDao.getList"/>
  </resultMap>
  <!-- 查询模块 -->
  <select id="get" parameterType="string" resultMap="Module">
    select
    	id, 
    	name, 
    	parent_id, 
    	type,
    	icon,
    	url,
    	number
    from module
    where id = #{id}
  </select>
  <!-- 查询模块列表 -->
  <select id="getList" parameterType="map" resultMap="Module">
    select
    	id, 
    	name, 
    	parent_id, 
    	type,
    	icon,
    	url,
    	number
    from module
    where 1 = 1
		<if test="name != null">
			and name = #{name}
		</if>		
		<if test="parentId != null">
			and parent_id = #{parentId}
		</if>
		<if test="parentIdIsNull != null">
			and parent_id is null
		</if>	
	order by number	
  </select>
  <!-- 添加模块 -->
  <insert id="add" parameterType="Module">
    insert into module (
   	<trim suffixOverrides=",">
    	id, 
    	name, 
    	parent_id, 
    	type,
    	icon,
    	url,
    	number,
   	</trim>
   	)values (
	<trim suffixOverrides=",">
      	#{id}, 
      	#{name},  
      	#{parentId},
      	#{type},
      	#{icon},
      	#{url},  
      	#{index},       	    	
     </trim>
     )
  </insert>
  <!-- 更新模块 -->
  <update id="update" parameterType="Module">
    update module
    <set>
      <if test="name != null">
        name = #{name},
      </if>
      <if test="parentId != null">
        parent_id = #{parentId},
      </if>
      <if test="type != null">
        type = #{type},
      </if>  
      <if test="icon != null">
        icon = #{icon},
      </if>  
      <if test="url != null">
        url = #{url},
      </if> 
      <if test="index != null">
        number = #{index},
      </if>                         
    </set>
    where id = #{id}
  </update>
  <!-- 删除模块 -->
  <delete id="delete" parameterType="string">
    delete from module
    where id = #{id}
  </delete>
</mapper>